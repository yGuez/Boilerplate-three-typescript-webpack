{
    "compilerOptions": {
        "target": "es5",
        "module": "commonjs", 
        "moduleResolution": "node",
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "preserveConstEnums": true,
        "suppressImplicitAnyIndexErrors": true,
        "strict": true, 
        "outDir": "./lib/",
        "typeRoots": [
            "node_modules/@types"
          ],
    },
    "exclude": [
        "node_modules",
        "lib"
    ]
}